{
	"extends": "./tsconfig.path.json",
	"compilerOptions": {
		"strict": true, //research
		"moduleResolution": "node", //research
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es2022",
		"target": "es2017",
		"jsx": "react",
		"allowJs": true, //research
		"skipLibCheck": true, //research
		"esModuleInterop": true, //research
		"allowSyntheticDefaultImports": true, //research
		"forceConsistentCasingInFileNames": true, //research
		"resolveJsonModule": true, //research
		"isolatedModules": true //research
	}
}
